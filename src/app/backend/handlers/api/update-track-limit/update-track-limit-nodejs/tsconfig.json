{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "dist",
        "rootDir": "."
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}