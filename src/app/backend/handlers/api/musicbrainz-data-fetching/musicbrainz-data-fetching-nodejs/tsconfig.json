{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "baseUrl": ".",
        "noImplicitAny": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "paths": {
            "shared/*": [
                "../../../shared/*"
            ]
        }
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}