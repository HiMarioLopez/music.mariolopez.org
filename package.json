    "update-build-deploy:api": "pnpm run-s update:lambda-* build:lambda-* deploy:api",
    "deploy:api": "cd src/infra && cdk deploy ApiStack",
    "update:lambda-developer-token": "cd src/app/backend/handlers/api/get-developer-token/get-developer-token-nodejs && pnpm install",
    "update:lambda-update-mut": "cd src/app/backend/handlers/api/update-mut/update-mut-nodejs && pnpm install",
