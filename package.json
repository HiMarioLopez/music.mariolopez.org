    "build:lambda-update-mut": "cd src/app/backend/handlers/api/update-mut/update-mut-nodejs && pnpm build",
    "build:lambda-get-mut": "cd src/app/backend/handlers/api/get-mut/get-mut-nodejs && pnpm build",
    "build:lambda-apple-music-data-fetching": "cd src/app/backend/handlers/api/apple-music-data-fetching/apple-music-data-fetching-nodejs && pnpm build",
