    "update:lambda-token-refresh": "cd src/app/backend/handlers/token-refresh-notification/token-refresh-notification-nodejs && pnpm install",
    "update:lambda-dlq-processor": "cd src/app/backend/handlers/dlq-processor/dlq-processor-nodejs && pnpm install",
    "update:lambda-update-track-history-job": "cd src/app/backend/handlers/update-track-history-job/update-track-history-job-nodejs && pnpm install",
