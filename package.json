    "build:lambda-dlq-processor": "cd src/app/backend/handlers/dlq-processor/dlq-processor-nodejs && pnpm build",
    "build:lambda-update-track-history-job": "cd src/app/backend/handlers/update-track-history-job/update-track-history-job-nodejs && pnpm build",
    "------------Backend (Combined Commands)------------": "--------------------------------",
    "update-and-build:backend": "pnpm run-s update:backend build:backend",
    "build:backend": "pnpm run-p build:lambda-*",
    "update:backend": "pnpm run-p update:lambda-*"
  },
  "devDependencies": {
    "npm-run-all2": "^7.0.2"
  }
}