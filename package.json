{
  "name": "music.mariolopez.org",
  "version": "0.1.0",
  "description": "See what I'm listening to, and make me a music recommendation. This is a mono-repo for the various frontends, backends, and infra components of this app.",
  "scripts": {
    "prepare": "husky install",
    "cz": "cz",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "update-and-build:frontend": "npm-run-all update:frontend build:frontend",
    "update:frontend": "npm-run-all --parallel update:music-*",
    "update:music-vue": "cd src/frontend/music-vue && npm install",
    "update:music-vanilla": "cd src/frontend/music-vanilla && npm install",
    "update:music-svelte": "cd src/frontend/music-svelte && npm install",
    "update:music-solid": "cd src/frontend/music-solid && npm install",
    "update:music-react": "cd src/frontend/music-react && npm install",
    "update:music-qwik": "cd src/frontend/music-qwik && npm install",
    "update:music-lit": "cd src/frontend/music-lit && npm install",
    "build:frontend": "npm-run-all --parallel build:music-*",
    "build:music-vue": "cd src/frontend/music-vue && npm run build",
    "build:music-vanilla": "cd src/frontend/music-vanilla && npm run build",
    "build:music-svelte": "cd src/frontend/music-svelte && npm run build",
    "build:music-solid": "cd src/frontend/music-solid && npm run build",
    "build:music-react": "cd src/frontend/music-react && npm run build",
    "build:music-qwik": "cd src/frontend/music-qwik && npm run build",
    "build:music-lit": "cd src/frontend/music-lit && npm run build"
  },
  "author": "Mario Lopez Martinez <mario@lopez.fyi>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@commitlint/cli": "18.6.1",
    "@commitlint/config-conventional": "18.6.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "standard-version": "^9.5.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}