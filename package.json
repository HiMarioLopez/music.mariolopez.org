{
  "name": "music.mariolopez.org",
  "description": "See what I'm listening to, and make me a music recommendation. This is a mono-repo for the various frontends, backends, and infra components of this app.",
  "homepage": "https://music.mariolopez.org/",
  "version": "0.2.0",
  "author": {
    "name": "Mario Lopez Martinez",
    "email": "mario@lopez.fyi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HiMarioLopez/music.mariolopez.org/"
  },
  "license": "GPL-3.0-only",
  "private": false,
  "scripts": {
    "update-and-build:frontend": "pnpm npm-run-all update:frontend build:frontend",
    "update:frontend": "pnpm npm-run-all --parallel update:music-*",
    "update:music-vue": "cd src/frontend/music-vue && pnpm install",
    "update:music-vanilla": "cd src/frontend/music-vanilla && pnpm install",
    "update:music-svelte": "cd src/frontend/music-svelte && pnpm install",
    "update:music-solid": "cd src/frontend/music-solid && pnpm install",
    "update:music-react": "cd src/frontend/music-react && pnpm install",
    "update:music-qwik": "cd src/frontend/music-qwik && pnpm install",
    "update:music-lit": "cd src/frontend/music-lit && pnpm install",
    "update:music-preact": "cd src/frontend/music-preact && pnpm install",
    "update:music-next": "cd src/frontend/music-next && pnpm install",
    "update:music-angular": "cd src/frontend/music-angular && pnpm install",
    "build:frontend": "pnpm npm-run-all --parallel build:music-*",
    "build:music-vue": "cd src/frontend/music-vue && pnpm run build",
    "build:music-vanilla": "cd src/frontend/music-vanilla && pnpm run build",
    "build:music-svelte": "cd src/frontend/music-svelte && pnpm run build",
    "build:music-solid": "cd src/frontend/music-solid && pnpm run build",
    "build:music-react": "cd src/frontend/music-react && pnpm run build",
    "build:music-qwik": "cd src/frontend/music-qwik && pnpm run build",
    "build:music-lit": "cd src/frontend/music-lit && pnpm run build",
    "build:music-preact": "cd src/frontend/music-preact && pnpm run build",
    "build:music-next": "cd src/frontend/music-next && pnpm run build",
    "build:music-angular": "cd src/frontend/music-angular && pnpm run build",
    "build:music-blazor": "cd src/frontend/music-blazor && dotnet publish Music.csproj /p:PublishProfile=FolderProfile"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}